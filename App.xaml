<Application x:Class="m6.uf4.dialogs.proba02.git.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:m6.uf4.dialogs.proba02.git"
           
             xmlns:View="clr-namespace:m6.uf4.dialogs.proba02.git.View"
             xmlns:ViewModel="clr-namespace:m6.uf4.dialogs.proba02.git.ViewModel"   
             
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <View:DialogWindow x:Key="{x:Type ViewModel:DialogWindowViewModel}" x:Shared="False" />
    </Application.Resources>
</Application>

